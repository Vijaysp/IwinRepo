CREATE TABLE USERTEAMSC (USERID VARCHAR(100), NAME VARCHAR(75) NOT NULL, MATCHID VARCHAR(10) NOT NULL, MATCHDATE DATE, PLAYER1POINTS INTEGER, PLAYER2POINTS INTEGER, PLAYER3POINTS INTEGER, PLAYER4POINTS INTEGER, PLAYER5POINTS INTEGER, PLAYER6POINTS INTEGER, PLAYER7POINTS INTEGER, PLAYER8POINTS INTEGER, PLAYER9POINTS INTEGER, PLAYER10POINTS INTEGER, PLAYER11POINTS INTEGER, SUBSTITUTEPOINTS INTEGER)